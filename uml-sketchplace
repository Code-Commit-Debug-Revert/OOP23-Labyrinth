classDiagram
    World o-- Player
    World o-- Matrix
    Matrix o-- TileAbstract
    TileAbstract <|-- NormalTile
    TileAbstract <|-- BoostTile
    TileAbstract <|-- DamageTile

    class Player {
        speed: int
        height: int
        health: int
        strength: int
        defense: int

    }

    class Matrix{
        width: int
        height: int
        tiles: TileAbstract[][]
    }

    class TileAbstract{
        openedAbove: boolean
        openedBelow: boolean
        openedRight: boolean
        openedLeft: boolean
        
        + isExplored() boolean
        + abstract onStep() void
        + onReveal() void 
    }
    
    class NormalTile {
        + override onStep() void
    }

    class BoostTile {
        + override onStep() void
    }

    class DamageTile {
        + override onStep() void
    }
